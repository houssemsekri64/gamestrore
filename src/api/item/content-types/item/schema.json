  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "shortDescription": {
      "type": "richtext"
    },
    "longDescrption": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "video": {
      "type": "string"
    },
    "image": {
      "allowedTypes": ["images", "files", "videos", "audios"],
      "type": "media",
      "multiple": false
    },
    "category": {
      "type": "enumeration",
      "enum": ["newArrivals", "bestSellers", "topRated"]
    }
  }
